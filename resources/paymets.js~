'use strict';

var root = '/payments';

module.exports = {

  //  Add Payment
  create: {
      method: 'post',
      endpoint: root,
      params: ['reference_code*', 'date*', 'amount*', 'channel*']
    },

  //  Get Payment
  get: {
      method: 'get',
      endpoint: [root, '/{id}'].join(''),
      args: ['id']
  },

  //  Payment History
  history: {
      method: 'post',
      endpoint: [root, '/history'].join(''),
      params: ['period*', 'start', 'end']
    },

  /*
  Update plan
  */
  update: {
      method: 'put',
      endpoint: [root, '/{id}'].join(''),
      params: ['name', 'description', 'amount', 'interval', 'send_invoices', 'send_sms', 'hosted_page', 'hosted_page_url', 'hosted_page_summary', 'currency'],
      args: ['id']
    }
};
